{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uxmp/Login.json",
  "title": "User login",
  "description": "Defines the user login request",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 4,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 50
    }
  },
  "require": ["username", "password"]
}