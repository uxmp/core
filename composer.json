{
    "name": "usox/core",
    "description": "Usox",
    "type": "project",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-readline": "*",
        "adhocore/cli": "^0.9.0",
        "doctrine/orm": "^2.9",
        "james-heinrich/getid3": "^1.9",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6.3",
        "psr/cache": "^2",
        "psr/container": "^1",
        "slim/slim": "4.*",
        "symfony/cache": "^5.3",
        "usox/json-schema-api": "^0.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^0.12.93",
        "phpstan/phpstan-strict-rules": "^0.12.10"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Jakob",
            "email": "github@usox.org"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "Usox\\Core\\": ["tests/"]
        }
    },
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "Usox\\Core\\": ["src/"]
        }
    },
    "scripts": {
        "serve": "php -S localhost:8888 -t src/public"
    }
}
