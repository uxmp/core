{
    "name": "uxmp/core",
    "description": "Usox Media Player Backend",
    "type": "project",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-readline": "*",
        "adhocore/cli": "^0.9.0",
        "doctrine/orm": "^2.9",
        "firebase/php-jwt": "^5.4",
        "james-heinrich/getid3": "^1.9",
        "jetbrains/phpstorm-attributes": "^1.0",
        "monolog/monolog": "^2.3",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6.3",
        "psr/cache": "^2",
        "psr/container": "^1",
        "slim/slim": "4.*",
        "symfony/cache": "^5.3",
        "tuupola/cors-middleware": "^1.2",
        "tuupola/slim-jwt-auth": "^3.5",
        "tzsk/collage": "^5.1",
        "usox/json-schema-api": "^0.4.0",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-mockery": "^1",
        "phpstan/phpstan-strict-rules": "^1",
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Jakob",
            "email": "github@usox.org"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "Uxmp\\Core\\": ["tests/"]
        }
    },
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "Uxmp\\Core\\": ["src/"]
        }
    },
    "scripts": {
        "serve": "php -S localhost:8888 -t src/public",
	"qa": "composer check-cs && composer stan && composer test",
	"check-cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
	"fix-cs": "./vendor/bin/php-cs-fixer fix",
	"test": "./vendor/bin/phpunit tests",
	"stan": "./vendor/bin/phpstan analyse",
	"coverage": "./vendor/bin/phpunit --warm-coverage-cache tests && XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html build/coverage tests"
    }
}
