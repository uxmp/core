#!/usr/bin/env php
<?php
declare(strict_types=1);

use Uxmp\Core\Component\Cli\CatalogAddCommand;
use Uxmp\Core\Component\Cli\CatalogUpdateCommand;

require_once __DIR__ . '/../vendor/autoload.php';

$app = new Ahc\Cli\Application(
    'uxmp core',
    'v0.0.1'
);

$app->add(new CatalogAddCommand(), 'ca');
$app->add(new CatalogUpdateCommand(), 'cu');

$logo = <<<LOGO
 _   ___  ___ __ ___  _ __  
| | | \ \/ / '_ ` _ \| '_ \ 
| |_| |>  <| | | | | | |_) |
 \__,_/_/\_\_| |_| |_| .__/ 
                     | |    
                     |_|
LOGO;

// Set logo
$app->logo($logo);

$app->handle($_SERVER['argv']);
